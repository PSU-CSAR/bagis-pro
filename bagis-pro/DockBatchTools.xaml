<UserControl x:Class="bagis_pro.DockBatchToolsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
             xmlns:ui="clr-namespace:bagis_pro"
             xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="325"
             d:DataContext="{Binding Path=ui.DockBatchToolsViewModel}">
     <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="54"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Row="0" Grid.Column="0" LastChildFill="true" KeyboardNavigation.TabNavigation="Local" Grid.ColumnSpan="3" >
            <TextBlock
                Name="tbMultiLine"
                TextWrapping="WrapWithOverflow" MaxWidth="300" Margin="5,2,0,2" HorizontalAlignment="Left">
                Select a basin or folder containing at least one AOI. The Watershed Characteristics report will be created in the
                maps_publish folder for each AOI in that folder.
            </TextBlock>
        </DockPanel>
        <DockPanel Grid.Row="1" Grid.Column="0" LastChildFill="true" KeyboardNavigation.TabNavigation="Local" Grid.ColumnSpan="2" Margin="2,0,2,0">
            <TextBox x:Name="txtParentFolder" Text="{Binding ParentFolder}" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="240" IsReadOnly="True" Margin="5,0,0,0" />
        </DockPanel>
        <DockPanel Grid.Row="1" Grid.Column="2" Margin="2,0,2,0">
            <Button x:Name="btnAoiFolder" Content="Select" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="50" Command="{Binding CmdAoiFolder}" Margin="5, 0, 0, 0"/>
        </DockPanel>
        <DockPanel Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="320">
            <CheckBox x:Name="chkArchive" VerticalContentAlignment="Top" Margin="5,0,0,0" 
                  IsEnabled="True" IsChecked="{Binding ArchiveChecked}" Height="34" >
                <TextBlock Text="Copy reports for all AOIs to the maps_publish subfolder in the selected folder" TextWrapping="Wrap"/>
            </CheckBox>
        </DockPanel>
        <!--<DockPanel Grid.Row="3" Grid.ColumnSpan="3" HorizontalAlignment="Left">
            <TextBlock
                Name="tbArchive"
                TextWrapping="WrapWithOverflow" MaxWidth="300" Margin="5,2,0,2">
                Copies reports for all AOIs will be saved in the maps_publish subfolder in the selected basin folder
            </TextBlock>
        </DockPanel> -->
        <DockPanel Grid.Row="3" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="2,2,2,2">
            <TextBlock
                Name="tbPublisher"
                TextWrapping="WrapWithOverflow" MaxWidth="100" VerticalAlignment="Center" Margin="2, 2, 5, 2">
                Publisher:
            </TextBlock>
            <TextBox x:Name="txtPublisher" Text="{Binding Publisher}" HorizontalAlignment="Left"  
                     VerticalAlignment="Center" Width="240" Margin="0, 2, 0, 2"/>
        </DockPanel>
        <DockPanel Grid.Row="4" Grid.Column="0" LastChildFill="true" KeyboardNavigation.TabNavigation="Local" Grid.ColumnSpan="3" Margin="0,2,0,2">
            <TextBlock
                Name="tbComments"
                TextWrapping="WrapWithOverflow" MaxWidth="300" VerticalAlignment="Center" Margin="5, 5, 0, 5">
                Comments:
            </TextBlock>
            <TextBox x:Name="txtComments" Text="{Binding Comments}" HorizontalAlignment="Left"  
                     VerticalAlignment="Center" Width="230" Height="45" Margin="5,5,5,5" />
        </DockPanel>
        <DockPanel Grid.Row="5" Grid.Column="0" LastChildFill="true" KeyboardNavigation.TabNavigation="Local" Grid.ColumnSpan="3" Margin="0,0.2,-0.4,0.2">
            <TextBlock
                Name="tbSettings"
                TextWrapping="WrapWithOverflow" MaxWidth="300" VerticalAlignment="Center" Margin="5, 5, 0, 5">
                Settings file:
            </TextBlock>
            <TextBox x:Name="txtSettingsFile" Text="{Binding SettingsFile}" HorizontalAlignment="Left"  
                     VerticalAlignment="Center" Width="225" IsReadOnly="True" Margin="5,4,0,4.8"
                     Foreground="Blue" Background="Transparent"/>
        </DockPanel>
        <DockPanel Grid.Row="6" Grid.ColumnSpan="3" LastChildFill="false" KeyboardNavigation.TabNavigation="Local" >
            <Button x:Name="btnLog" Content="View Log" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75" IsEnabled="{Binding CmdLogEnabled}" Command="{Binding CmdLog}" Margin="5, 0, 0, 0"/>
        </DockPanel>
        <!--<StackPanel Grid.Row="9" Orientation="Vertical" Margin="5,2,0,2" HorizontalAlignment="Left" Grid.ColumnSpan="3">-->
        <DockPanel Grid.Row="8" Grid.ColumnSpan="3" LastChildFill="false"  Margin="5,2,0,2" HorizontalAlignment="Left">
            <ListView ItemsSource="{Binding Names}" Width="320">
                <ListView.View>
                    <GridView AllowsColumnReorder="true"
              ColumnHeaderToolTip="Aoi">

                        <GridViewColumn DisplayMemberBinding=
                          "{Binding Path=Name}" 
                      Header="Aoi" Width="195"/>

                        <GridViewColumn DisplayMemberBinding=
                          "{Binding Path=AoiBatchStateText}" 
                      Width="65">
                            <GridViewColumnHeader>Status
                            </GridViewColumnHeader>
                        </GridViewColumn>

                        <GridViewColumn Header="Include" Width="50">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding AoiBatchIsSelected}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn DisplayMemberBinding=
                          "{Binding Path=FilePath}" 
                      Header="File Path" Width="0" />
                    </GridView>

                </ListView.View>
            </ListView>
        </DockPanel>
        <!--</StackPanel>-->
        <DockPanel Grid.Row="9" Grid.Column="3" LastChildFill="false" KeyboardNavigation.TabNavigation="Local" >
            <Button x:Name="btnRun" Content="Run" HorizontalAlignment="Left" VerticalAlignment="Center" Width="50" IsEnabled="{Binding CmdRunEnabled}" Command="{Binding CmdRun}" Margin="5, 0, 0, 0"/>
        </DockPanel>
        <DockPanel Grid.Row="9" Grid.Column="0" LastChildFill="false" KeyboardNavigation.TabNavigation="Local" >
            <Button x:Name="btnSnodas" Content="Export AOI GeoJson for Snodas" HorizontalAlignment="Left" VerticalAlignment="Center" Width="175" IsEnabled="{Binding CmdSnodasEnabled}" Command="{Binding CmdSnodas}" Margin="5, 0, 0, 0" Visibility="Hidden"/>
        </DockPanel>
        <DockPanel Grid.Row="10" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="320">
            <CheckBox x:Name="chkAlwaysNear" VerticalContentAlignment="Top" Margin="5,0,0,0" 
                  IsEnabled="True" IsChecked="{Binding AlwaysNearChecked}" Height="34" >
                <TextBlock Text="Always look up station triplet with NEAR" />
            </CheckBox>
        </DockPanel>
        <DockPanel Grid.Row="11" Grid.Column="0" LastChildFill="false" KeyboardNavigation.TabNavigation="Local">
            <CheckBox x:Name="chkMerge" VerticalContentAlignment="Top" Margin="5,0,0,0" 
                  IsEnabled="True" IsChecked="{Binding MergeAoiVChecked}" Height="34" >
                <TextBlock Text="Merge all aoi_v polygons" />
            </CheckBox>        
        </DockPanel>
        <DockPanel Grid.Row="12" Grid.Column="0" LastChildFill="false" KeyboardNavigation.TabNavigation="Local">
            <Button x:Name="btnPourpoint" Content="Update Forecast Station Data" HorizontalAlignment="Left" VerticalAlignment="Center" Width="175" IsEnabled="{Binding CmdForecastEnabled}" Command="{Binding CmdForecast}" Margin="5, 0, 0, 0"/>
        </DockPanel>
    </Grid>
</UserControl>
