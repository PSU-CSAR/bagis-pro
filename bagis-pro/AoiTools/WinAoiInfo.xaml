<controls:ProWindow x:Class="bagis_pro.AoiTools.WinAoiInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
        mc:Ignorable="d" Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
    >
    <controls:ProWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ProWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Row="0" Grid.Column="0" Margin="2,0,2,0">
            <TextBlock Name="tbElevation" MaxWidth="100" VerticalAlignment="Center" HorizontalAlignment="Left" FontWeight="Bold" Text="Elevation Stats:" Margin="5, 0, 0, 0"/>
        </DockPanel>
        <DockPanel Grid.Row="1" Grid.Column="0" Margin="2,0,2,0">
            <TextBlock Name="tbMin" MaxWidth="50" VerticalAlignment="Center" HorizontalAlignment="Left"  Text="Min:" Margin="2, 0, 0, 0"/>
            <TextBox x:Name="txtMinElev" Text="{Binding MinElevMeters}" TextAlignment="Right"  
                                    VerticalAlignment="Center" Width="60" IsReadOnly="True"
                                    Foreground="Blue" FontWeight="Bold" Background="Transparent" Margin="10,0,5,0"/>
            <TextBlock Name="tbMinUnits" MaxWidth="50" VerticalAlignment="Center" HorizontalAlignment="Left"  Text="Meters" Margin="2, 0, 0, 0"/>
        </DockPanel>
        <DockPanel Grid.Row="2" Grid.Column="0" Margin="2,0,2,0">
            <TextBlock Name="tbMax" MaxWidth="50" VerticalAlignment="Center" HorizontalAlignment="Left"  Text="Max:" Margin="2, 0, 0, 0"/>
            <TextBox x:Name="txtMaxElev" Text="{Binding MaxElevMeters}" TextAlignment="Right"  
                                    VerticalAlignment="Center" Width="60" IsReadOnly="True"
                                    Foreground="Blue" FontWeight="Bold" Background="Transparent" Margin="8,0,3,0"/>
            <TextBlock Name="tbMaxUnits" MaxWidth="50" VerticalAlignment="Center" HorizontalAlignment="Left"  Text="Meters" Margin="5, 0, 0, 0"/>
        </DockPanel>
        <DockPanel Grid.Row="3" Grid.Column="0" Margin="2,0,2,0">
            <TextBlock Name="tbRange" MaxWidth="50" VerticalAlignment="Center" HorizontalAlignment="Left"  Text="Range:" Margin="2, 0, 0, 0"/>
            <TextBox x:Name="txtMaxRange" Text="{Binding Path=ElevRangeMeters, Mode=OneWay}" TextAlignment="Right"  
                                    VerticalAlignment="Center" Width="60" IsReadOnly="True"
                                    Foreground="Blue" FontWeight="Bold" Background="Transparent" Margin="2,0,2,0"/>
            <TextBlock Name="tbRangeUnits" MaxWidth="50" VerticalAlignment="Center" HorizontalAlignment="Left"  Text="Meters" Margin="5, 0, 0, 0"/>
        </DockPanel>
        <DockPanel Grid.Row="0" Grid.Column="1" Margin="2,0,2,0">
            <TextBlock Name="tbArea" MaxWidth="100" VerticalAlignment="Center" HorizontalAlignment="Left" FontWeight="Bold" Text="Aoi Area:" Margin="5, 0, 0, 0"/>
        </DockPanel>
        <DockPanel Grid.Row="1" Grid.Column="1" Margin="2,0,2,0">
            <TextBox x:Name="txtAreaSqKm" Text="{Binding Path=AreaSqKm}" TextAlignment="Right"  
                                    VerticalAlignment="Center" Width="80" IsReadOnly="True"
                                    Foreground="Blue" FontWeight="Bold" Background="Transparent"/>
            <TextBlock MaxWidth="60" VerticalAlignment="Center" HorizontalAlignment="Left"  Text="Square Km" Margin="5, 0, 0, 0"/>
        </DockPanel>
        <DockPanel Grid.Row="2" Grid.Column="1" Margin="2,0,2,0">
            <TextBox x:Name="txtAreaAcre" Text="{Binding Path=AreaAcre}" TextAlignment="Right"  
                            VerticalAlignment="Center" Width="80" IsReadOnly="True"
                            Foreground="Blue" FontWeight="Bold" Background="Transparent"/>
            <TextBlock MaxWidth="60" VerticalAlignment="Center" HorizontalAlignment="Left"  Text="Acre" Margin="5, 0, 0, 0"/>
        </DockPanel>
        <DockPanel Grid.Row="3" Grid.Column="1" Margin="2,0,2,0">
            <TextBox x:Name="txtAreaSqMile" Text="{Binding Path=AreaSqMile}" TextAlignment="Right"  
                            VerticalAlignment="Center" Width="80" IsReadOnly="True"
                            Foreground="Blue" FontWeight="Bold" Background="Transparent"/>
            <TextBlock MaxWidth="70" VerticalAlignment="Center" HorizontalAlignment="Left"  Text="Square Miles" Margin="5, 0, 0, 0"/>
        </DockPanel>
        <DockPanel Grid.Row="0" Grid.Column="2" Margin="2,0,2,0">
            <TextBlock Name="tbRefArea" MaxWidth="100" VerticalAlignment="Center" HorizontalAlignment="Left" FontWeight="Bold" Text="Reference Area:" Margin="5, 0, 0, 0"/>
        </DockPanel>
        <DockPanel Grid.Row="1" Grid.Column="2" Margin="2,0,2,0">
            <TextBox x:Name="txRefArea" Text="{Binding Path=AoiRefArea}" TextAlignment="Right"  
                                    VerticalAlignment="Center" Width="80" IsReadOnly="True"
                                    Foreground="Blue" FontWeight="Bold" Background="Transparent"/>
            <TextBlock MaxWidth="75" VerticalAlignment="Center" HorizontalAlignment="Left"  Text="{Binding Path=AoiRefUnits}" Margin="5, 0, 0, 0"/>
        </DockPanel>
        <DockPanel Grid.Row="2" Grid.Column="2" Margin="2,0,2,0">
            <Button x:Name="btnSetAoi" Content="Set Aoi" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="75" Command="{Binding CmdSetAoi}" Margin="25, 0, 0, 0"/>
        </DockPanel>
        <GroupBox Margin="5,0,0,5" Padding="2" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Left">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontWeight="Bold">Presence of BAGIS Layers</TextBlock>
                </StackPanel>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <DockPanel Grid.Row="0" Grid.Column="1" Margin="2,0,2,0">
                    <TextBlock MaxWidth="50" VerticalAlignment="Center" Text="Selected" Margin="5, 0, 0, 0"/>
                </DockPanel>
                <DockPanel Grid.Row="1" Grid.Column="0" Margin="2,0,2,0">
                    <CheckBox x:Name="ckHasPrism" Content="PRISM Layers" VerticalAlignment="Center" IsChecked="{Binding Prism_Checked}" />
                </DockPanel>
                <DockPanel Grid.Row="1" Grid.Column="1" Margin="2,0,2,0">
                    <CheckBox x:Name="ckReclipPrism" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding ReclipPrism_Checked}" Checked="ClipCheckBoxChanged" Unchecked="ClipCheckBoxChanged" />
                </DockPanel>
                <DockPanel Grid.Row="2" Grid.Column="0" Margin="2,0,2,0">
                    <GroupBox x:Name="grpPrism" Margin="5,0,0,5" Padding="2" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Left">
                        <GroupBox.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock>PRISM</TextBlock>
                            </StackPanel>
                        </GroupBox.Header>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <DockPanel Grid.Row="0" Grid.Column="0" Margin="2,0,2,0">
                                <TextBlock MaxWidth="110" VerticalAlignment="Center" Text="Clip Buffer Distance:" Margin="5, 0, 0, 0"/>
                            </DockPanel>
                            <DockPanel Grid.Row="0" Grid.Column="1" Margin="2,0,2,0">
                                <TextBox x:Name="txtPrismBuffer" Text="{Binding Path=PrismBufferDistance}" HorizontalAlignment="Left"  
                                    VerticalAlignment="Center" Width="50"/>
                                <ComboBox Name="cboPrismBufferUnits" SelectedItem="{Binding PrismBufferUnits}" HorizontalAlignment="Center" 
                                    ItemsSource="{Binding LstUnits}" VerticalAlignment="Center" Width="75" Height="15" />
                            </DockPanel>
                            <DockPanel Grid.Row="1" Grid.Column="0" Margin="2,0,2,0">
                                <TextBlock MaxWidth="90" VerticalAlignment="Center" HorizontalAlignment="Left"  Text="Depth Unit:" Margin="5, 0, 0, 0"/>
                            </DockPanel>
                            <DockPanel Grid.Row="1" Grid.Column="1" Margin="2,0,2,0">
                                <!-- Making this read-only for now; The units come from the data source definition -->
                                <RadioButton GroupName="depthUnit" Tag ="Inches" Margin="2, 0, 0, 0" IsChecked="{Binding PrismInchesChecked}" VerticalAlignment="Center" IsEnabled="False">Inches</RadioButton>
                                <RadioButton GroupName="depthUnit" Tag ="Millimeters" Margin="2, 0, 0, 0" IsChecked="{Binding PrismMmChecked}" VerticalAlignment="Center" IsEnabled="False">Millimeters</RadioButton>
                            </DockPanel>
                        </Grid>
                    </GroupBox>
                </DockPanel>
                <DockPanel Grid.Row="3" Grid.Column="0" Margin="2,0,2,0">
                    <CheckBox x:Name="ckHasSnotel" Content="SNOTEL" VerticalAlignment="Center" IsChecked="{Binding SNOTEL_Checked}" />
                </DockPanel>
                <DockPanel Grid.Row="3" Grid.Column="1" Margin="2,0,2,0">
                    <CheckBox x:Name="ckReclipSnotel" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding ReclipSNOTEL_Checked}" Checked="ClipCheckBoxChanged" Unchecked="ClipCheckBoxChanged"/>
                </DockPanel>
                <DockPanel Grid.Row="4" Grid.Column="0" Margin="2,0,2,0">
                    <TextBlock MaxWidth="110" VerticalAlignment="Center" Text="Clip Buffer Distance:" Margin="5, 0, 5, 0"/>
                    <TextBox x:Name="txtSNOTELBuffer" Text="{Binding Path=SnotelBufferDistance}" HorizontalAlignment="Left"  
                                    VerticalAlignment="Center" Width="50"/>
                    <ComboBox Name="cboSnotelBufferUnits" SelectedItem="{Binding SnotelBufferUnits}" Margin="5, 0, 0, 0" HorizontalAlignment="Left"  
                      ItemsSource="{Binding LstUnits}" VerticalAlignment="Center" Width="75" Height="15" />
                </DockPanel>
                <DockPanel Grid.Row="5" Grid.Column="0" Margin="2,0,2,0">
                    <CheckBox x:Name="ckHasSnowCos" Content="Snow Course" VerticalAlignment="Center" IsChecked="{Binding SnowCos_Checked}" />
                </DockPanel>
                <DockPanel Grid.Row="5" Grid.Column="1" Margin="2,0,2,0">
                    <CheckBox x:Name="ckReclipSnowCos" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding ReclipSnowCos_Checked}" Checked="ClipCheckBoxChanged" Unchecked="ClipCheckBoxChanged"/>
                </DockPanel>
                <DockPanel Grid.Row="6" Grid.Column="0" Margin="2,0,2,0">
                    <TextBlock MaxWidth="110" VerticalAlignment="Center" Text="Clip Buffer Distance:" Margin="5, 0, 5, 0"/>
                    <TextBox x:Name="txtSnowCosBuffer" Text="{Binding Path=SnowCosBufferDistance}" HorizontalAlignment="Left"  
                                    VerticalAlignment="Center" Width="50"/>
                    <ComboBox Name="cboSnowCourseBufferUnits" SelectedItem="{Binding SnowCosBufferUnits}" HorizontalAlignment="Left" Margin="5, 0, 0, 0"
                      ItemsSource="{Binding LstUnits}" VerticalAlignment="Center" Width="75" Height="15" />
                </DockPanel>
            </Grid>
        </GroupBox>
        <DockPanel Grid.Row="5" Grid.Column="2" Margin="2,0,2,0">
            <Button x:Name="btnReclip" Content="Re-clip Selected Layers" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="150" Command="{Binding CmdClipLayers}" Margin="15, 0, 0, 0" IsEnabled="False"/>
        </DockPanel>
        <DockPanel Grid.Row="6" Grid.Column="2" Margin="2,0,2,0">
            <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="100" Command="{Binding CmdClose}" Margin="15, 0, 0, 0" />
        </DockPanel>

    </Grid>
</controls:ProWindow>
